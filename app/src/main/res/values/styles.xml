<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="PostImage">
        <item name="android:layout_marginRight">@dimen/post_image_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/post_image_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/post_image_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/post_image_horizontal_margin</item>
    </style>
    <style name="PostTitle">
        <item name="android:layout_marginRight">@dimen/post_title_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/post_title_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/post_title_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/post_title_horizontal_margin</item>

        <item name="android:textSize">@dimen/post_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_text_color</item>
    </style>
    <style name="PostFullText">
        <item name="android:layout_marginRight">@dimen/post_full_text_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/post_full_text_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/post_full_text_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/post_full_text_horizontal_margin</item>

        <item name="android:textSize">@dimen/post_full_text_text_size</item>
        <item name="android:textColor">@color/dark_text_color</item>
    </style>

</resources>
