<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="@dimen/feed_card_vertical_margin"
    android:layout_marginTop="@dimen/feed_card_vertical_margin"
    android:layout_marginLeft="@dimen/feed_card_horizontal_margin"
    android:layout_marginRight="@dimen/feed_card_horizontal_margin"
    app:cardCornerRadius="@dimen/card_corner_radius">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pub_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/feed_data_text_size"
            android:textColor="@color/white_text_color"
            android:background="@color/data_background"
            android:paddingRight="@dimen/feed_post_pub_date_horizontal_padding"
            android:text=""/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center_vertical|left"
            android:textSize="@dimen/feed_title_text_size"
            android:textStyle="bold"
            android:paddingRight="@dimen/feed_post_title_horizontal_padding"
            android:paddingLeft="@dimen/feed_post_title_horizontal_padding"
            android:paddingBottom="@dimen/feed_post_title_vertical_padding"
            android:paddingTop="@dimen/feed_post_title_vertical_padding"
            android:text=""
            android:textColor="@color/dark_text_color"
            android:background="@drawable/feed_item_background"/>
    </LinearLayout>
</android.support.v7.widget.CardView>